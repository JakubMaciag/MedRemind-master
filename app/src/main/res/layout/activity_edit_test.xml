<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_nameEditTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Name" />

    <EditText
        android:id="@+id/et_nameEditTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_descrTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_descrTest2"
        android:layout_alignBottom="@+id/et_descrTest2"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Description" />

    <TextView
        android:id="@+id/tv_dateTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_hourEditTest"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Date" />

    <TextView
        android:id="@+id/tv_resultTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_resultTest2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_typeEditTest"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Result" />

    <TextView
        android:id="@+id/tv_hourEditTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_hourEditTest2"
        android:layout_alignLeft="@+id/tv_descrTest"
        android:layout_alignStart="@+id/tv_descrTest"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Time" />

    <EditText
        android:id="@+id/et_typeEditTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_nameEditTest2"
        android:ems="10"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/et_resultTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_typeEditTest2"
        android:ems="10"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_typeEditTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_typeEditTest2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_nameEditTest"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Type of test" />

    <EditText
        android:id="@+id/et_hourEditTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_resultTest2"
        android:ems="10"
        android:inputType="time" />

    <EditText
        android:id="@+id/et_dateTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_dateTest"
        android:layout_alignBottom="@+id/tv_dateTest"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/et_descrTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_dateTest2"
        android:ems="10" />

    <Button
        android:id="@+id/bt_okTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:text="OK" />

</RelativeLayout>